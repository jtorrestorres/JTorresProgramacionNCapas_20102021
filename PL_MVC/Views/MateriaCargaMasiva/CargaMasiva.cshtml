@model ML.ErrorExcel
@{
    ViewBag.Title = "CargaMasiva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CargaMasiva</h2>
@*file Upload
    lbl
    txt*@

<div class="container">
    <div class="row">

    </div>

</div>
@using (Html.BeginForm("CargaMasiva", "MateriaCargaMasiva", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-3">
        <input type="file" id="fuMaterias" name="ExcelMaterias" />
    </div>

    if (!Model.Correct)
    {
        <div class="col-md-1">
            <input type="submit" value="Procesar" class="btn btn-info" />
        </div>
    }
    else
    {
        <div class="col-md-1">
            <input type="submit" value="IniciarCarga" class="btn btn-success" />
        </div>
    }



}
@if (Model.Errores.Count>0 )
{
    <table class="table table-bordered table-responsive">
        <thead>
            <tr>
                <td>Registro</td>
                <td>Error</td>

            </tr>
        </thead>
        <tbody>
            @foreach (ML.ErrorExcel error in Model.Errores)
            {
                <tr>
                    <td>@error.IdRegistro</td>
                    <td>@error.Message</td>
                </tr>
            }



        </tbody>
    </table>
}
